<%- include('header') %>
    <div id="main-content">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                  <!-- post-container -->
                    <div class="post-container">

                            
                            <div class="post-content single-post">
                                
                                <h3><%= singlePost.title %></h3>
                                <div class="post-information">
                                    <span>
                                        <i class="fa fa-tags" aria-hidden="true"></i>
                                        <a href="/category/<%= singlePost.category.name %>"> <%= singlePost.category.name %> </a>
                                        
                                    </span>
                                    <span>
                                        <i class="fa fa-user" aria-hidden="true"></i>
                                        <a href='/author/<%= singlePost.user.username %>'><%= singlePost.user.username %></a>
                                    </span>
                                    <span>
                                        <i class="fa fa-calendar" aria-hidden="true"></i>
                                        <%= singlePost.formattedDate %>
                                    </span>
                                </div>
                                <img class="single-feature-image" src="/uploads/<%= singlePost.image %>" alt=""/>
                                <p class="description">
                                    <%= singlePost.description %>
                                </p>
                            </div>

                    </div>
                    <!-- /post-container -->
                <%# include('comment') %>

                <div class="comment-container">
                   <h4 class="comment-heading">Comments :</h4>

                <input type="text" hidden name="postId" value="<%= singlePost._id %>">
               
                <% singlePost?.comment?.forEach(comment => { %>
                    <div class="comment-content">
                        <i class="fa fa-user-o" aria-hidden="true"></i>
                        <span class="comment-name"> <%= comment.name %></span>
                        <span class="comment-date">Date: <%= new Date(comment.date).toLocaleDateString() %></span>
                        <p> <%= comment.description %></p>
                    </div>
                <% }) %>
               </div>
               <form action="/single/<%=singlePost._id  %>" method="POST" autocomplete="off">
                    <!-- <h4>Leave Comment</h4> -->
                    <input type="text" hidden name="postId" value="<%= singlePost._id %>">
                        <div class="form-group">
                            <label>User Name</label>
                            <input type="text" name="name" class="form-control" placeholder="Username" required>
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" name="email" class="form-control" placeholder="email" required>
                        </div>
                        <div class="form-group">
                            <label for="description"> Description</label>
                            <textarea name="description" id="description" class="form-control" rows="5" required></textarea>
                        </div>
                    
                        <input type="submit" name="save" class="btn btn-primary" value="Add Comment" required />
                    </form>

                </div>

                <%- include('sidebar') %>
            </div>
        </div>
    </div>
<%- include('footer') %>

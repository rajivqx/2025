
<%- include('header') %>
<div id="admin-content">
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <h1 class="admin-heading">All Categories</h1>
            </div>
            <div class="col-md-2">
                <a class="add-new" href="/admin/add-category">add category</a>
            </div>
            <div class="col-md-12">
                <table class="content-table">
                    <thead>
                        <th>S.No.</th>
                        <th>Category Name</th>
                        <th>No. of Posts</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </thead>
                    <tbody>
                                                             
                        <% categories.forEach(function(category,index){ %>
                            <tr>
                                <td class='id'><%= offset + index + 1 %></td>
                                <td><%= category.name %></td>
                                <td><%= category.postLength %></td>
                                <td class='edit'><a href='/admin/update-category/<%= category._id %>'><i class='fa fa-edit'></i></a></td>
                                <td class='delete'>
                                  <% if (category.postLength <! 0 ) { %>
                                   
                                    <a href='/admin/delete-category/<%= category._id %>'>
                                      <i class='fa fa-trash-o'></i>
                                    </a>
                                  <% } %>
                                </td>
                              </tr>
                        <% }) %>
                        
                    </tbody>
                </table>
                <ul class='pagination admin-pagination'>
                  <% if (currentPage > 1) { %>
                    <li>
                      <a href="/admin/category?page=<%= currentPage - 1 %>">Previous</a>
                    </li>
                  <% } %>
      
                  <% if (totalPages > 1) { %>
                    <% for (let i=1; i <= totalPages; i++) { %>
                      <li class="<%= currentPage === i ? 'active' : '' %>">
                        <a href="/admin/category?page=<%= i %>">
                          <%= i %>
                        </a>
                      </li>
                    <% } %>
                  <% }  %>
      
                  <% if (currentPage < totalPages) { %>
                    <li><a href="/admin/category?page=<%= currentPage + 1 %>">Next</a></li>
                  <% } %>
              </ul>

            </div>
        </div>
    </div>
</div>
<%- include('footer') %>

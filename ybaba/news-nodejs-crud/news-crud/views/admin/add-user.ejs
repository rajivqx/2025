<%- include('header') %>
  <div id="admin-content">
      <div class="container">
          <div class="row">
              <div class="col-md-12">
                  <h1 class="admin-heading">Add User</h1>
              </div>
              <div class="col-md-offset-3 col-md-6">
                  <!-- Form Start -->            
                  <form  action="/admin/users" method ="POST" autocomplete="off">
                    
                      <div class="form-group">
                          <label>User Name</label>
                          <input type="text" name="username" class="form-control" placeholder="Username"  maxlength="10" required>
                          
                        </div>
                      <div class="form-group">
                            <label>Email</label>
                            <input type="text" name="email" class="form-control" placeholder="email"   required>
                            
                        </div>
                      <div class="form-group">
                          <label>Password</label>
                          <input type="password" name="password" class="form-control" placeholder="Password" required>
                          
                        </div>
                      
                        
                      <input type="submit"  name="save" class="btn btn-primary" value="Save" required />
                  </form>
                   <!-- Form End-->
                   <% if (errors.length > 0) { %>
                    <ul style="list-style-type: disc; color: #C47472; background: #F2DEDF; padding:20px 30px; margin-top:15px">
                        <% errors.forEach(error => { %>
                            <li><%= error.msg %></li>
                        <% }) %>
                    </ul>
                <% } %>
               </div>
           </div>
       </div>
   </div>
   <%- include('footer') %>

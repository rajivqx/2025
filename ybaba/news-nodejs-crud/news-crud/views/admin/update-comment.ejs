<%- include('header') %>
    <div id="admin-content">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="admin-heading">Update Comment</h1>
                </div>
                <div class="col-md-offset-3 col-md-6">
                    <!-- Form for show edit-->
                    <form action="/admin/comments/<%= comment._id %>" method="POST" >
                        <div class="form-group">
                            <input type="hidden" name="id" class="form-control" value="<%= comment._id %>" >
                        </div>
                        
                        <div class="form-group">
                            <label for="description"> Description</label>
                            <textarea name="description" id="description" class="form-control" required rows="5">
                                <%= comment.description %>
                            </textarea>
                        </div>
                        
                        
                        <input type="submit" name="submit" class="btn btn-primary" value="Update" required />
                    </form> 
                    <!-- Form End -->
                </div>
            </div>
        </div>
    </div>
    <%- include('footer') %>